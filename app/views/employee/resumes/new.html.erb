Add Resume
<div class="row">
  <div class="col-md-4 col-lg-4">
    <div class="panel panel-default">
      <div class="panel-heading">My Resume</div>

      <div style="padding-left: 10px; padding-bottom: 10px;">
        <%= form_for @employee.build_resume, url: employee_resume_path do |f| %>
          <%= f.label :description %><br/>
          <%= f.text_area :description %><br/>

          <%= f.label :salary %><br/>
          <%= f.text_field :salary %><br/>

          <%= f.label :phone %><br/>
          <%= f.text_field :phone %><br/>

          <%= f.label :education %><br/>
          <%= f.text_area :education %><br/>

          <%= f.label :experience %><br/>
          <%= f.text_area :experience %><br/>

          <%= f.file_field :attach_pdf %><br/>

          <%= f.submit "Add" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-8 col-lg-8" style="margin: 0">
  </div>

</div>
