<div class="row">
  <div class="col-md-5 toppad pull-right col-md-offset-3">
    <%= link_to "Edit Profile", edit_user_registration_path %>
    <p class=" text-info">
      <%= @employer.updated_at.localtime.strftime("Last Update : %A %d-%b-%Y %I:%M %p") %>
    </p>
  </div>

  <div class=
    "col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">
    <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @employer.name %></h3>
        </div>

        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-lg-3" style="text-align: center"><img alt="User Pic" class=
              "img-circle" src=
              "https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100"></div><!--<div class="col-xs-10 col-sm-10 hidden-md hidden-lg"> <br>
                <dl>
                  <dt>DEPARTMENT:</dt>
                  <dd>Administrator</dd>
                  <dt>HIRE DATE</dt>
                  <dd>11/12/2013</dd>
                  <dt>DATE OF BIRTH</dt>
                     <dd>11/12/2013</dd>
                  <dt>GENDER</dt>
                  <dd>Male</dd>
                </dl>
              </div>-->

            <div class=" col-md-9 col-lg-9">
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <td>Department:</td>

                    <td>Employer</td>
                  </tr>

                  <tr>
                    <td>Email</td>

                    <td>
                      <%= mail_to @employer.email %>
                    </td>
                  </tr>
                </tbody>
              </table>
              <%= link_to "Create Jobs", new_employer_job_path, class: :"btn btn-primary" %>
              <%= link_to "List My Jobs", employer_jobs_path, class: :"btn btn-primary" %>
            </div>
          </div>
        </div>

        <div class="panel-footer" style="height: 50px">
          <span class="pull-right">
            <%= link_to "", edit_user_registration_path, class: :"btn btn-sm btn-warning glyphicon glyphicon-edit" %>

            <%= link_to "", edit_user_registration_path, method: :delete, class: :"btn btn-sm btn-danger glyphicon glyphicon-remove", data: { confirm: "Are you sure you want to delete?"} %>
          </span>
        </div>
      </div>
    </div>
</div>
